<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <main>
        <h2>Posts</h2>
        <article>
            <% if (posts.length) { %>
              <% posts.forEach(({ id, text, title, date, author }) => { %>
                  <article>
                    <div class="postHeader">
                        <h3><%= author %></h3>  <h2><a href="/posts/<%= id %>"><%= title %></a></h2><h3><%=date %></h3>
                    </div>        
           <div class="post">
            <%=text %>
           </div>    
                </article>
              <% }) %>
            <% } %>
          </article>
    </main>

</body>
</html>